{
  "name": "gocd-dashboard",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test": "mocha spec/ --compilers js:node_modules/babel-core/register --timeout 15000",
    "prestart": "mkdirp assets/fonts && mkdirp assets/js && npm run add-flexbox && npm run add-roboto-font && npm run add-material-icons",
    "start": "webpack --config webpack.config.production.js && cross-env NODE_ENV=production npm run start-server",
    "lint": "eslint server/** client/**",
    "start-server": "babel-node ./bin/appServer",
    "dev-start": "babel-node ./bin/devServer & nodemon --exec \"npm run lint && npm run start-server\" --ignore assets/js",
    "add-flexbox": "cp node_modules/flexboxgrid/css/index.min.css assets/stylesheets/flexbox.css",
    "add-roboto-font": "cp node_modules/roboto-font/fonts/Roboto/* assets/fonts",
    "add-material-icons": "cp node_modules/mdi/css/materialdesignicons.min.css assets/stylesheets/materialdesignicons.css && cp node_modules/mdi/fonts/* assets/fonts"
  },
  "dependencies": {
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "flexboxgrid": "^6.3.0",
    "material-ui": "^0.14.4",
    "mdi": "^1.4.57",
    "moment": "^2.11.2",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-tap-event-plugin": "^0.2.2",
    "request": "^2.69.0",
    "request-promise": "^2.0.1",
    "roboto-font": "^0.1.0",
    "socket.io": "^1.4.5",
    "socket.io-client": "^1.4.5",
    "xml2js": "^0.4.16"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "vars-on-top": 2,
      "no-undef": 2
    },
    "globals": {
      "window": true,
      "document": true
    }
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.5.2",
    "babel-eslint": "^4.1.8",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "cross-env": "^1.0.7",
    "ejs": "^2.4.1",
    "eslint": "^1.10.3",
    "mkdirp": "^0.5.1",
    "mocha": "^2.4.5",
    "mockery": "^1.4.1",
    "react-hot-loader": "^1.3.0",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1"
  }
}
